<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/title"
                    android:id="@+id/imageView" android:adjustViewBounds="false" android:cropToPadding="false"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center"
                android:layout_weight="5">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="丸暗記"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/btnLearn" android:textSize="30sp" android:background="#003300"
                        android:textColor="#FFFFFF"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView9" android:height="20dp"/>
                <Button
                        android:text="テスト"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:id="@+id/btnTest" android:textSize="30sp" android:background="#003300"
                        android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:baselineAligned="false"
                android:layout_weight="2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center" android:layout_weight="1">
                <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/btnHistory" android:background="@drawable/history"/>
                <TextView
                        android:text="履歴"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView" android:gravity="center" android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center">
                <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/btnSettings" android:background="@drawable/settings"/>
                <TextView
                        android:text="設定"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2" android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>